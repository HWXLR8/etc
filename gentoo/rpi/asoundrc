pcm.dmixer {
    type dmix
    ipc_key 1024
    slave {
        pcm "hw:0,0"
        rate 48000
        channels 2
    }
}

pcm.softvol {
    type softvol
    slave.pcm "dmixer"
    control {
        name "SoftMaster"
        card 0
    }
}

pcm.!default {
    type plug
    slave.pcm "softvol"
}

ctl.!default {
    type hw
    card 0
}
